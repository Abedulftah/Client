                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="60.0" prefHeight="100.0">
               <children>
                  <Label fx:id="totalOrdersLabel" style="-fx-text-fill: linear-gradient(to right, #ffefba, #ffffff);" text="Total Orders: 0">
