<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CartItemUserController">
   <center>
      <AnchorPane prefHeight="100.0" prefWidth="1284.0" style="-fx-background-color: linear-gradient(to right, #000046, #1cb5e0);">
         <children>
            <HBox>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <Label fx:id="nameLabel" style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="Pop Israel Flowers" wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <Label fx:id="priceLabel" style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="\$130.99" wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <Label fx:id="sizeLabel" style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="Approximately 10.5&quot; W x 11&quot; H" wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="13.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <Label fx:id="descriptionLabel" style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="Arrangement of Long-stemmed Roses, Lavender Roses, Monte Casino and Seasonal Flowers in a Wicker Basket. Comes with a box of chocolates, teddy bear and a blessing message." wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="12.8" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <Label fx:id="quantityLabel" style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="10" wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="17.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                     <children>
                        <JFXButton onAction="#handleBuyButton" prefHeight="28.0" prefWidth="71.0" style="-fx-background-color: linear-gradient(to right, #f12711, #f5af19); -fx-background-radius: 100; -fx-text-fill: linear-gradient(to right, #c9d6ff, #e2e2e2);" text="Buy">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Cambria Bold" size="14.0" />
                           </font>
                        </JFXButton>
                        <Label style="-fx-text-fill: linear-gradient(to right, #f7971e, #ffd200);" text="|" wrapText="true">
                           <font>
                              <Font name="Cambria Bold" size="36.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" />
                           </HBox.margin>
                        </Label>
                        <JFXButton onAction="#handleRemoveButton" prefHeight="28.0" prefWidth="71.0" style="-fx-background-color: linear-gradient(to right, #cb2d3e, #ef473a); -fx-background-radius: 100; -fx-text-fill: linear-gradient(to right, #c9d6ff, #e2e2e2);" text="Remove">
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <font>
                              <Font name="Cambria Bold" size="14.0" />
                           </font>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
